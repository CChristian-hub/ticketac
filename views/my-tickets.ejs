    <div id="navbarRight" class="d-flex align-items-centers m-3 p-3">
      <a href="/" id="navConnexion" class="m-3">
        Déconnexion
      </a>
      <a href="/homepage/lastTrips" id="navLastTrips" class="m-3">
        My last trips
      </a>
    </div>
  </div>
  <h2 style="text-align: center; margin-top: 30px; color:white">My tickets</h2>
  <table class="table" style="margin-top: 30px; width: 700px; margin:auto; ">
    <thead style="background-color: rgb(255, 255, 255); border-radius:30px">
      <tr>
        <th scope="col">N°</th>
        <th scope="col">Journey</th>
        <th scope="col">Date</th>
        <th scope="col">Departure time</th>
        <th scope="col">Price</th>
      </tr>
    </thead>
    <tbody>
      <% let priceTotal=0%>
        <% for(let i=0; i < produitCard.length; i++) { %>

          <tr style="background-color: rgba(255, 255, 255, 0.829);">
            <th scope="row">
              <%=i + 1%>
            </th>
            <td>
              <%=produitCard[i].departure%> / <%=produitCard[i].arrival%>
            </td>
            <td>
              <%=dateFormat(produitCard[i].date)%>
            </td>
            <td>
              <%=produitCard[i].departureTime%>
            </td>
            <td>
              <%= produitCard[i].price %>€
            </td>
            <% priceTotal +=parseInt(produitCard[i].price) %>
          </tr>
          <% }%>
            <tr class='test' style="border:none; background-color: rgba(240, 180, 180, 0.883);">
              <th scope="row" style="border:none;">Total</th>
              <td style="border:none;"></td>
              <td style="border:none;"></td>
              <td style="border:none;"></td>
              <td style="border:none;">
                <%=priceTotal%>€
              </td>
            </tr>
    </tbody>
  </table>
  </div>

  <form action="/paiement/create-checkout-session" method="POST" style="display: flex; justify-content: center;">

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary m-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Confirmer
    </button>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Êtes-vous sûr ?</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Confirmer</button>
          </div>
        </div>
      </div>
    </div>

  </form>
