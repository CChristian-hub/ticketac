<!DOCTYPE html>
<html>

<head>
  <title>
    Ticketac </title>
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <%- include('navbar.ejs') %>
    <div class="home mt-5">

      <div class="row" style="padding:0 100px">


        <!-- SIGN UP AREA -->
        <div class="col-12 col-sm-6 text-center">

          <div class="formArea">
            <h4 class="titleForm">Sign Up</h4>

            <form action="/users/sign-up" method="POST">
              <div class="form-group">
                <input name="firstNameFromFront" type="text" class="form-control" placeholder="firstname">
              </div>
              <div class="form-group">
                <input name="lastNameFromFront" type="text" class="form-control" placeholder="lastname">
              </div>
              <div class="form-group">
                <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp"
                  placeholder="email">
              </div>
              <div class="form-group">

                <input name="passwordFromFront" type="password" class="form-control" placeholder="password">
              </div>

              <button type="submit" class="btn btn-info mt-3 text-white">Confirm</button>

              <p id="msg_sucess_bool" style="display: none;">
                <%= message_success %>
              </p>
              <div id="msg_success" class="alert alert-success mt-3" role="alert">
                Votre compte a bien été crée
              </div>
            </form>
          </div>
        </div>

        <!-- SIGN IN AREA -->
        <div class="col-12 col-sm-6 text-center">

          <div class="formArea">

            <h4 class="titleForm">Sign In</h4>

            <form action="/users/sign-in" method="POST">
              <div class="form-group">
                <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp"
                  placeholder="Enter email">
              </div>
              <div class="form-group">
                <input name="passwordFromFront" type="password" class="form-control" placeholder="Enter password">
              </div>

              <button type="submit" class="btn btn-info mt-3 text-white">Confirm</button>
            </form>

          </div>

        </div>

      </div>
    </div>

</body>

<script src="/javascript/script.js"></script>

</html>