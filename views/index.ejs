<!DOCTYPE html>
<html>

<head>
  <title>
    Ticketac </title>
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <div id="navbar" class="d-flex justify-content-between">

    <div id="navbarLeft" class="d-flex align-items-center">
      <a href="#">
        <img src="/images/train.png" class="m-3" alt="train_logo">
      </a>
      <a href="#" class="m-3" id="ticketacButton">
        Ticketac
      </a>
    </div>

    <div id="navbarRight" class="d-flex align-items-centers m-3 p-3">
      <a href="#" id="navConnexion" class="m-3">
        Connection
      </a>
      <a href="#" id="navLastTrips" class="m-3">
        My last trips
      </a>
    </div>
  </div>

  <div class="home mt-5">

    <div class="row">


      <!-- SIGN UP AREA -->
      <div class="col-12 col-sm-6 text-center">

        <div class="formArea">
          <h4 class="titleForm">Sign In</h4>

          <form action="/sign-up" method="POST">
            <div class="form-group">
              <input name="usernameFromFront" type="text" class="form-control" placeholder="name">
            </div>
            <div class="form-group">
              <input name="usernameFromFront" type="text" class="form-control" placeholder="firstname">
            </div>
            <div class="form-group">
              <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp"
                placeholder="email">
            </div>
            <div class="form-group">

              <input name="passwordFromFront" type="password" class="form-control" placeholder="password">
            </div>

            <button type="submit" class="btn btn-info mt-3 text-white">Confirm</button>
          </form>
        </div>

      </div>

      <!-- SIGN IN AREA -->
      <div class="col-12 col-sm-6 text-center">

        <div class="formArea">

          <h4 class="titleForm">Sign In</h4>

          <form action="/sign-in" method="POST">
            <div class="form-group">
              <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp"
                placeholder="Enter email">
            </div>
            <div class="form-group">
              <input name="passwordFromFront" type="password" class="form-control" placeholder="Enter password">
            </div>

            <button type="submit" class="btn btn-info mt-3 text-white">Confirm</button>
          </form>

        </div>

      </div>

    </div>
  </div>

</body>

</html>