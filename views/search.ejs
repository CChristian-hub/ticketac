<!DOCTYPE html>
<html>

<head>
    <title>
        Ticketac </title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <%- include('navbar.ejs') %>

        <div class="d-flex flex-column align-items-center">
            <h1 class="departureTitle">Tickets available on <%= day %>/<%=month %> :</h1>

            <% for( let i=0; i < journey.length; i++ ) { %>

                <div class="d-flex searchTicket justify-content-around col-8 align-items-center">
                    <p class="departureCity"><span>
                            <%= journey[i].departure%>
                        </span>/<span>
                            <%= journey[i].arrival %>
                        </span></p>
                    <p class="departureInfo">train departure at : <%= journey[i].departureTime %>
                    </p>
                    <p>
                        <span class="departurePrice">
                            <%= journey[i].price%>â‚¬
                        </span><span>
                            <a href="/homepage/add-ticket?journey=<%=journey[i]._id%>">

                                <!-- <a href="/homepage/add-ticket?departure=<%=journey[i].departure%>&arrival=<%=journey[i].arrival%>&departureTime=<%=journey[i].departureTime%>&price=<%=journey[i].price%>&date=<%=formatDate(journey[i].date)%>"> -->
                                <button type="button" class="btn btn-danger">OK</button>
                            </a>
                        </span>
                    </p>
                </div>
                <% } %>
        </div>
</body>

</html>